{
  "name": "root",
  "private": true,
  "scripts": {
    "clean": "lerna clean --yes; rm -rf node_modules",
    "install": "lerna bootstrap && lerna link",
    "prettify": "prettier --write \"**/*.*\"",
    "build": "lerna run build"
  },
  "devDependencies": {
    "husky": "^2.3.0",
    "lerna": "^3.14.1",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "remark-cli": "^6.0.1",
    "remark-lint": "^6.0.4",
    "remark-preset-lint-consistent": "^2.0.2",
    "remark-preset-lint-markdown-style-guide": "^2.1.2",
    "remark-preset-lint-recommended": "^3.0.2"
  },
  "workspaces": [
    "packages/*"
  ],
  "prettier": {
    "trailingComma": "all",
    "proseWrap": "always"
  },
  "lint-staged": {
    "linters": {
      "*.md": [
        "remark .",
        "prettier --write",
        "git add"
      ],
      "*.ts": [
        "tslint --project .",
        "prettier --write",
        "git add"
      ],
      "*.{js,json}": [
        "prettier --write",
        "git add"
      ]
    },
    "ignore": []
  },
  "hooks": {
    "pre-commit": "lint-staged"
  },
  "version": "0.0.1"
}
